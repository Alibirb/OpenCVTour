<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				android:paddingBottom="@dimen/activity_vertical_margin"
				android:orientation="vertical"
				tools:context="alicrow.opencvtour.FollowTourActivity"
				android:weightSum="1">


	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/current_location"
		android:text="Current location: unknown"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/directions"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Find closest tour item"
		android:id="@+id/find_closest_tour_item" />

	<TextView
		android:text="Closest tour item"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/closest_tour_item_name"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:visibility="invisible"/>

	<TextView
		android:text="location: "
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/closest_tour_item_location"
		android:visibility="invisible"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="description"
		android:id="@+id/closest_tour_item_description"
		android:visibility="invisible"/>


</LinearLayout>
